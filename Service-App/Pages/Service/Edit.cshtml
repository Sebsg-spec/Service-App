@page
@model Service_App.Pages.Service.EditModel

@{
    ViewData["Title"] = "Edit";
}
<style>
    .margin-top {
        margin-top: 10px;
    }
</style>

<h1>Edit</h1>

<h4>Services</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Services.Id" />
            <div class="form-group">
                <label asp-for="Services.Location" class="control-label"></label>
                <input asp-for="Services.Location" class="form-control" />
                <span asp-validation-for="Services.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Services.Availability" class="control-label"></label>
                <input asp-for="Services.Availability" class="form-control" />
                <span asp-validation-for="Services.Availability" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Services.Price" class="control-label"></label>
                <input asp-for="Services.Price" class="form-control" />
                <span asp-validation-for="Services.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary margin-top" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
